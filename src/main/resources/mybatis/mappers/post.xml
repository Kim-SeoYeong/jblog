<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="post">

	<!-- 포스트 insert문 -->
	<insert id="postInsert" parameterType="com.javaex.vo.PostVo">
		<![CDATA[
			insert into post
			values (seq_post_no.nextval, 
					#{cateNo}, 
					#{postTitle}, 
					#{postContent}, 
					sysdate)
		]]>
	</insert>
	
	<!-- 블로그 메인화면에 뿌려줄 기본화면 포스트 조회하기 -->
	<select id="postList" parameterType="string" resultType="com.javaex.vo.PostVo">
		<![CDATA[
			select  p.postNo,
			        p.cateNo,
			        p.postTitle,
			        p.postContent,
			        to_char(p.regDate, 'YYYY/MM/DD') as regDate,
			        g.id
			from category g, post p
			where g.cateNo = p.cateNo
			and g.cateNo = (select max(cateNo)
			                from category
			                where id = #{id})
		]]>
	</select>
	
