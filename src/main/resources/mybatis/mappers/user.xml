<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="user">

	<!-- 회원가입 정보 insert -->
	<insert id="userInsert" parameterType="com.javaex.vo.UserVo">
		<![CDATA[
			insert into users
			values (seq_users_no.nextval, 
					#{id}, 
					#{userName}, 
					#{password}, 
					sysdate)
		]]>
	</insert>
	
	<!-- 블로그 한개 조회 -->
	<select id="userSelectOne" parameterType="string" resultType="com.javaex.vo.UserVo">
		<![CDATA[
			select  u.userNo,
			        u.id,
			        u.userName,
			        u.password,
			        b.blogTitle,
			        b.logoFile
			from users u, blog b
			where u.id = b.id
			and b.id = #{id}
		]]>
	</select>
</mapper>